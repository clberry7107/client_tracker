<%= render 'shared/errors', obj: @artist %>
<h1>These are your search results for <u><%= @artist.ListName %></u></h1>
<h3>Select the artist you are looking for.</h3>
<h2>Click artist name to visit pollstar page.</h2>
<%= form_tag("/add_artist", method: "get") do %>
	<% @artists.each do |artist| %>
		<div class="row well">
			<div class="col-sm-1">
				<%= radio_button_tag(:selected_artist, artist.ArtistID)  %>
			</div>
			<div class="col-sm-2">
				<a href= <%= artist.Url %>><%=  label_tag(:selected_artist, "#{artist.ListName} - #{artist.Genre}")  %></a>
			</div>
		</div>
	<% end %>
	<%= hidden_field_tag :user, current_user.id %>
	<%= hidden_field_tag :type, 'Redirect' %>
	<%= hidden_field_tag :artist, @artist.ListName %>
	<%= submit_tag("Select") %>
<% end %>